@model OceanaAura.Web.Models.Auth.NewPasswordVM
@{
    Layout = "../Shared/_AuthLayout.cshtml";
}

<section class="vh-100 d-flex align-items-center justify-content-center bg-dark">
    <div class="container py-5">
        <div class="card shadow-lg rounded-4 border-0">
            <div class="row g-0">
                <!-- Left Side - Logo -->
                <div class="col-12 col-md-6 bg-black text-white d-flex justify-content-center align-items-center rounded-start">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/File/Images/loginLogo.jpg" class="img-fluid" alt="Login Logo" loading="lazy" />
                    </a>
                </div>
                <!-- Right Side - Form -->
                <div class="col-12 col-md-6 p-4 p-md-5 bg-white">
                    <h2 class="fw-bold text-center text-black mb-4">Reset Password</h2>
                    <p class="text-center text-muted mb-4">Please enter your new password and confirm it below.</p>
                    <form asp-action="NewPassword" asp-controller="Auth" method="post">
                        <input type="hidden" asp-for="OTP" value="@ViewBag.OTP" />
                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold text-black">New Password</label>
                            <div class="input-group">
                                <input asp-for="NewPassword" class="form-control form-control-lg" id="NewPassword" type="password" placeholder="Enter your new password" />
                                <button type="button" class="btn btn-outline-dark" id="toggleNewPassword" style="cursor: pointer;">
                                    <i class="bi bi-eye-slash" id="toggleNewPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold text-black">Confirm Password</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="ConfirmPassword" type="password" placeholder="Confirm your new password" />
                                <button type="button" class="btn btn-outline-dark" id="toggleConfirmPassword" style="cursor: pointer;">
                                    <i class="bi bi-eye-slash" id="toggleConfirmPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <ul class="list-unstyled text-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </ul>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-dark btn-lg py-3" type="submit">Reset Password</button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-action="Login" asp-controller="Auth" class="text-dark text-decoration-none">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section ScriptsAuth {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/togglePassword.js"></script>
}
