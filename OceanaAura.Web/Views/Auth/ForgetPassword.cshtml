@model OceanaAura.Web.Models.Auth.ForgetPasswordVM
@{
    Layout = "../Shared/_AuthLayout.cshtml";
}

<section class="vh-100 d-flex align-items-center justify-content-center bg-dark">
    <div class="container py-5">
        <div class="card shadow-lg rounded-4 border-0">
            <div class="row g-0">
                <div class="col-12 col-md-6 bg-black text-white d-flex justify-content-center align-items-center rounded-start">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/File/Images/loginLogo.jpg" class="img-fluid" alt="Logo" loading="lazy" />
                    </a>
                </div>
                <div class="col-12 col-md-6 p-4 p-md-5 bg-white">
                    <h2 class="fw-bold text-center text-black mb-4">Forgot Password</h2>
                    <p class="text-center text-muted mb-4">Enter your Gmail address to reset your password.</p>
                    <form asp-action="ForgetPassword" asp-controller="Auth" method="post" class="form-forget-password">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold text-black">Email Address</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your Gmail address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <ul class="list-unstyled text-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </ul>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-dark btn-lg py-3" type="submit">Send OTP to Reset</button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-action="Login" asp-controller="Auth" class="text-dark text-decoration-none">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section ScriptsAuth {
    <partial name="_ValidationScriptsPartial" />
}
