@{
    Layout = "../Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="w-100">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Colors</h1>
        <a asp-action="AddColor" asp-controller="Admin" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Product Colors
        </a>
    </div>
    <hr />

    <!-- DataTable -->
    <table id="colorsTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>ImageUrl</th>
                <th>Name En</th>
                <th>Name Ar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- Modal for editing color details -->
<div class="modal fade" id="editColorModal" tabindex="-1" aria-labelledby="editColorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editColorModalLabel">Edit Color</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="h5">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form to edit color details -->
                <form id="editColorForm">
                    <div class="mb-3">
                        <label for="editColorNameEn" class="form-label">Color Name (English)</label>
                        <input type="text" class="form-control" id="editColorNameEn" required>
                    </div>
                    <div class="mb-3">
                        <label for="editColorNameAr" class="form-label">Color Name (Arabic)</label>
                        <input type="text" class="form-control" id="editColorNameAr" required>
                    </div>
                    <div class="mb-3">
                        <label for="editColorImage" class="form-label">Color Image</label>
                        <div class="custom-file">
                            <input type="file" class="form-control-file custom-file-input" id="editColorImage" accept="image/*" />
                            <label class="custom-file-label" for="editColorImage">Choose file</label>
                        </div>
                        <img id="colorImagePreview" src="" alt="Image Preview" class="mt-3" style="max-width: 100px; display: none;" />
                    </div>
                </form>
                <div id="editColorError" class="alert alert-danger d-none">
                    <ul id="errorList"></ul>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveColorChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section ScriptsAuth {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
      $(document).ready(function () {
    // Initialize DataTable
    var table = $('#colorsTable').DataTable({
        "serverSide": true,
        "processing": true,
        "ajax": {
            "url": "@Url.Action("GetAllColors", "Admin")",
            "type": "POST",
            "datatype": "json"
        },
        "scrollX": true,
        "responsive": true,
        "columns": [
            {
                "data": "imageUrl",
                "orderable": false,
                "name": "Details",
                "autoWidth": true,
                "render": function (data) {
                    if (!data) {
                        return '<div style="width: 40px; height: 40px; object-fit: cover">No Image</div>';
                    } else {
                        return `<img src="/File/ColorsImg/${data}" style="width: 40px; height: 40px; object-fit: cover;">`;
                    }
                }
            },
            { "data": "nameEn", "name": "NameEn", "autoWidth": true },
            { "data": "nameAr", "name": "NameAr", "autoWidth": true },
            {
                "data": null,
                "orderable": false,
                "render": function (data, type, row) {
                    return `
                        <a href="#" class="delete-color" data-id="${row.id}" data-imgurl="${row.imageUrl}">
                            <i class="fas fa-trash text-danger"></i>
                        </a>
                    `;
                }
            }
        ]
    });
    // Handle delete-color button click
    $('#colorsTable').on('click', '.delete-color', function (e) {
        e.preventDefault();
        var colorId = $(this).data('id');
        var imgUrl = $(this).data('imgurl');

        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("DeleteColor", "Admin")',
                    type: 'POST',
                            data: { id: colorId, imgUrl: imgUrl },
                            success: function (response) {
                        debugger
                        if (response.success) {
                            Swal.fire('Deleted!', response.message, 'success');
                            table.ajax.reload();
                        } else {
                            Swal.fire('Error!', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error!', 'Unable to delete color.', 'error');
                    }
                });
            }
        });
    });
});

    </script>
}
