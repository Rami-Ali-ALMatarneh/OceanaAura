@{
    Layout = "../Shared/_AdminLayout.cshtml";
}
<div class="w-100">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h3 class="fw-bold">Add New Product</h3>
        <div class="d-flex justify-content-between align-items-center" style="gap:10px">
            <a asp-action="Products" asp-controller="Admin" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left fa-sm text-primary-50"></i> Back to Products
            </a>
            <button class="btn btn-primary">Add Product</button>
        </div>
    </div>
    <form>
        <div class="row g-4">
            <!-- General Information -->
            <div class="col-lg-8 col-md-12 mt-3">
                <div class="card p-4">
                    <h5 class="fw-bold">General Information</h5>
                    <div class="mb-3">
                        <label for="productName" class="form-label">Name Product</label>
                        <input type="text" class="form-control" id="productName" placeholder="Enter product name">
                    </div>
                    <div class="mb-3">
                        <label for="productDescription" class="form-label">Description Product</label>
                        <textarea class="form-control" id="productDescription" rows="4" placeholder="Enter product description"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Size</label>
                            <div class="d-flex flex-wrap gap-2">
                                <button type="button" class="btn btn-outline-secondary">XS</button>
                                <button type="button" class="btn btn-primary">S</button>
                                <button type="button" class="btn btn-outline-secondary">M</button>
                                <button type="button" class="btn btn-outline-secondary">XL</button>
                                <button type="button" class="btn btn-outline-secondary">XXL</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Pick Colors</label>
                            <div class="border p-2 rounded" style="min-height: 50px;" id="selected-colors">
                                <!-- Selected items will appear here -->
                            </div>
                            <div class="dropdown mt-3">
                                <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select Colors
                                </button>
                                <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton" style="max-height: 200px; overflow-y: auto;">
                                    <li>
                                        <a class="dropdown-item" href="#" data-color="Orange">
                                            <span class="me-2 text-warning fs-1">&#9679;</span> Orange
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" data-color="Purple">
                                            <span class="me-2 text-primary">&#9679;</span> Purple
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" data-color="Green">
                                            <span class="me-2 text-success">&#9679;</span> Green
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" data-color="Blue">
                                            <span class="me-2 text-info">&#9679;</span> Blue
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upload Image -->
            <div class="col-lg-4 col-md-12 mt-3">
                <div class="card p-4">
                    <h5 class="fw-bold">Upload Image</h5>
                    <div class="d-flex flex-wrap justify-content-between">
                        <img src="https://via.placeholder.com/100" alt="Product image" class="img-thumbnail img-fluid">
                        <img src="https://via.placeholder.com/100" alt="Product image" class="img-thumbnail img-fluid">
                        <img src="https://via.placeholder.com/100" alt="Product image" class="img-thumbnail img-fluid">
                        <div class="d-flex align-items-center justify-content-center bg-light border rounded" style="width: 100px; height: 100px;">
                            <span class="text-muted fs-4">+</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pricing and Stock -->
            <div class="col-lg-8 col-md-12 mt-3">
                <div class="card p-4">
                    <h5 class="fw-bold">Pricing and Stock</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="basePricing" class="form-label">Price in JOR</label>
                            <input type="text" class="form-control" id="basePricing" placeholder="$0.00">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="basePricingUSD" class="form-label">Price in USD</label>
                            <input type="text" class="form-control" id="basePricingUSD" placeholder="$0.00">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="basePricingUAE" class="form-label">Price in UAE</label>
                            <input type="text" class="form-control" id="basePricingUAE" placeholder="$0.00">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="stock" class="form-label">Stock</label>
                            <input type="number" class="form-control" id="stock" placeholder="0">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="discount" class="form-label">Discount</label>
                            <input type="text" class="form-control" id="discount" placeholder="10%">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Category -->
            <div class="col-lg-4 col-md-12 mt-3">
                <div class="card p-4">
                    <h5 class="fw-bold">Category</h5>
                    <div class="mb-3">
                        <label for="productCategory" class="form-label">Product Category</label>
                        <select class="form-select w-100" id="productCategory">
                            <option selected disabled>Choose a category</option>
                            <option value="Jacket">Jacket</option>
                            <option value="Shirt">Shirt</option>
                            <option value="Pants">Pants</option>
                            <option value="Shoes">Shoes</option>
                            <option value="Accessories">Accessories</option>
                        </select>
                    </div>
                    <button type="button" class="btn btn-primary w-100">Add Category</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@section ScriptsAuth {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.dropdown-item').forEach(item => {
                item.addEventListener('click', function (e) {
                    e.preventDefault();
                    const colorName = this.getAttribute('data-color');
                    const selectedColorsDiv = document.getElementById('selected-colors');

                    if (!Array.from(selectedColorsDiv.children).find(child => child.textContent.trim() === colorName)) {
                        const colorTag = document.createElement('span');
                        colorTag.classList.add('badge', 'bg-light', 'text-dark', 'me-2', 'mb-1', 'd-inline-flex', 'align-items-center');
                        colorTag.style.cursor = 'pointer';
                        colorTag.innerHTML = `${colorName} <span class="ms-2 text-danger">&times;</span>`;
                        colorTag.querySelector('span').addEventListener('click', () => colorTag.remove());
                        selectedColorsDiv.appendChild(colorTag);
                    }
                });
            });
        });
    </script>
}
