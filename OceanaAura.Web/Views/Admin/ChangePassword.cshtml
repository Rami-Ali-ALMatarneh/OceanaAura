@{
    Layout = "../Shared/_AdminLayout.cshtml";
}

@model OceanaAura.Web.Models.Auth.ChangePasswordVM

@* Bootstrap CSS and Custom CSS *@
<div class="container-fluid d-flex justify-content-center align-items-start  mt-5 mb-5" style="height: 100vh;">
    <div class="row w-100">
        <!-- Change Password Form -->
        <div class="col-md-12 col-lg-12 mx-auto boxPorfile2">
            <div class="card shadow mb-4">
                <div class="card-body p-4">
                    <form asp-controller="Admin" asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <h4 class="card-title text-center mb-4">Change Password</h4>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="form-label" asp-for="CurrentPassword">Current Password:</label>
                                <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Enter current password">
                                <span class="form-text text-danger" asp-validation-for="CurrentPassword"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="form-label" asp-for="NewPassword">New Password:</label>
                                <input type="password" class="form-control" asp-for="NewPassword" placeholder="Enter new password">
                                <span class="form-text text-danger" asp-validation-for="NewPassword"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="form-label" asp-for="ConfirmNewPassword">Confirm New Password:</label>
                                <input type="password" class="form-control" asp-for="ConfirmNewPassword" placeholder="Re-enter new password">
                                <span class="form-text text-danger" asp-validation-for="ConfirmNewPassword"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptsAuth {
    <partial name="_ValidationScriptsPartial" />
}
