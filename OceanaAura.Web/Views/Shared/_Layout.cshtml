            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Home/RemoveFromCart',
                        type: 'POST',
                        data: { orderNumber: orderNumber },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "Removed!",
                                    text: "The item has been removed from your cart.",
                                    icon: "success",
                                    timer: 1500,
                                    showConfirmButton: false
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: "Error!",
                                    text: "Failed to remove the item. Please try again.",
                                    icon: "error",
                                    timer: 1500,
                                    showConfirmButton: false
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                title: "Error!",
                                text: "An error occurred while removing the item. Please try again.",
                                icon: "error",
                                timer: 1500,
                                showConfirmButton: false
                            });
                        }
                    });
                }
            });
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Check if the region has already been selected
            const isRegionSelected = sessionStorage.getItem("regionSelected");

            if (!isRegionSelected) {
                // Show the region selection modal
                const regionModal = new bootstrap.Modal(document.getElementById('regionSelectionModal'));
                regionModal.show();

                // Set a flag in session storage to indicate the region has been selected
                sessionStorage.setItem("regionSelected", "true");
            }
        });

        function setSelectedRegion(selectedRegion) {
            $.ajax({
                url: '@Url.Action("SetSelectedRegion", "Home")',
                type: 'POST',
                data: { selectedRegion: selectedRegion },
                success: function (response) {
                    if (response.success) {
                        // Close the modal
                        const regionModal = bootstrap.Modal.getInstance(document.getElementById('regionSelectionModal'));
                        location.reload();
                    }
                },
                error: function () {
                    alert('There was an error setting the region.');
                }
            });
        }
    </script>
    <script>
        window.onscroll = function () {
            const goUpBtn = document.getElementById('go-up-btn');
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                goUpBtn.style.display = 'block'; // Show the button
            } else {
                goUpBtn.style.display = 'none'; // Hide the button
            }
        };

        // Scroll to Top on Button Click
        document.getElementById('go-up-btn').addEventListener('click', function () {
            window.scrollTo({
                top: 0,
                behavior: 'smooth' // Smooth scroll
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
