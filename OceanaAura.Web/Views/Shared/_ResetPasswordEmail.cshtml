@model string
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - Oceana Aura</title>
    <link rel="icon" href="~/File/Images/HeadLogo.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #000000;
            margin: 0;
            padding: 0;
            color: #ffffff;
        }

        .container {
            max-width: 650px;
            margin: 50px auto;
            background-color: #1a1a1a;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(255, 255, 255, 0.1);
            padding: 0;
            overflow: hidden;
        }

        .header {
            background-color: #000000;
            padding: 40px;
            text-align: center;
            border-bottom: 1px solid #333;
        }

            .header h2 {
                font-size: 28px;
                margin: 0;
                color: #ffffff;
                font-weight: 600;
                letter-spacing: 1px;
            }

                .header h2 span {
                    color: #007BFF;
                }

        .content {
            padding: 30px;
            color: #e0e0e0;
        }

            .content p {
                font-size: 16px;
                line-height: 1.6;
                margin: 0 0 20px 0;
            }

        .otp-code {
            font-size: 24px;
            font-weight: bold;
            padding: 15px;
            border-radius: 8px;
            background-color: #000000;
            color: #ffffff;
            text-align: center;
            margin: 20px 0;
            border: 1px solid #333;
            letter-spacing: 3px;
        }

        .button {
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            padding: 12px 25px;
            border-radius: 30px;
            display: inline-block;
            margin-top: 20px;
            font-weight: 600;
            transition: background-color 0.3s ease;
            text-align: center;
            width: 100%;
            max-width: 200px;
        }

            .button:hover {
                background-color: #0056b3;
            }

        .footer {
            background-color: #000000;
            color: #ffffff;
            text-align: center;
            padding: 20px;
            font-size: 14px;
            border-top: 1px solid #333;
        }

            .footer p {
                margin: 0;
            }

        .highlight {
            color: #007BFF;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Your OTP for Account Verification - <span>Oceana Aura</span></h2>
        </div>
        <div class="content">
            <p>Hello,</p>
            <p>We received a request to verify your account. Please use the One-Time Password (OTP) below to complete the verification process:</p>

            <div class="otp-code">
                <strong>@Model</strong>
            </div>

            <p>This OTP is valid for a limited time. Do not share it with anyone.</p>
            <p>If you did not request this, please ignore this email or contact support.</p>
        </div>
        <div class="footer">
            <p>&copy; 2024 <span class="highlight">Oceana Aura</span>. All rights reserved.</p>
        </div>
    </div>
</body>
</html>