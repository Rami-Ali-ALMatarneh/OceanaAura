@model OceanaAura.Application.Features.Invoice.Commands.AddInvoice.InvoiceDetails

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .invoice-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .invoice-header h1 {
                margin: 0;
                font-size: 24px;
                color: #333;
            }

        .invoice-details {
            margin-bottom: 20px;
        }

            .invoice-details h2 {
                margin: 0 0 10px 0;
                font-size: 20px;
                color: #555;
            }

            .invoice-details p {
                margin: 5px 0;
            }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .invoice-table th, .invoice-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .invoice-table th {
                background-color: #f2f2f2;
            }

        .invoice-total {
            text-align: right;
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header">
            <h1>Invoice for Order #@Model.OrderId</h1>
        </div>

        <div class="invoice-details">
            <h2>Customer Details</h2>
            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>Address:</strong> @Model.Address, @Model.City, @Model.PostalCode</p>
            <p><strong>Apartment:</strong> @Model.Apartment</p>
            <p><strong>Region:</strong> @Model.Region</p>
            <p><strong>Delivery Region:</strong> @Model.DeliveryRegion</p>
            <p><strong>Create On:</strong> @Model.CreateOn</p>

        </div>

        <table class="invoice-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Size</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cart in Model.Carts)
                {
                    <tr>
                        <td>@cart.ProductName</td>
                        <td>@cart.SizeName</td>
                        <td>@cart.ColorName</td>
                        <td>@cart.Quantity</td>
                        <td>@cart.ProductPriceString</td>
                        <td>@cart.TotalPriceString</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="invoice-total">
            <p><strong>Subtotal:</strong> @Model.SubTotalString</p>
            <p><strong>Shipping:</strong> @Model.ShippingString</p>
            <p><strong>Total Price:</strong> @Model.TotalPriceString</p>
        </div>
    </div>
</body>
</html>