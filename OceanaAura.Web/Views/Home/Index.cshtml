<section class="testimonials py-5 bg-light">
    <div class="section-header text-center mt-5">
        <h3 class="section-title">WE LOVE GOOD COMPLIMENT</h3>
    </div>
    <div class="swiper testimonial-swiper overflow-hidden my-5">
        <div class="swiper-wrapper d-flex">
            @functions {
                public string GenerateStarRating(int rating)
                {
                    var fullStars = rating;
                    var emptyStars = 5 - rating;

                    var stars = new System.Text.StringBuilder();
                    for (int i = 0; i < fullStars; i++)
                    {
                        stars.Append("<i class='fas fa-star'></i>"); // Full star
                    }
                    for (int i = 0; i < emptyStars; i++)
                    {
                        stars.Append("<i class='far fa-star'></i>"); // Empty star
                    }

                    return stars.ToString();
                }
            }

            @foreach (var Feedback in VisibilityFeedback)
            {
                <div class="swiper-slide">
                    <div class="testimonial-item text-center">
                        <blockquote>
                            <p>“@Feedback.Content”</p>
                            <div class="review-title text-uppercase">
                                <p>Submitted by: @Feedback.Email</p>
                                <div class="star-rating">
                                    @Html.Raw(GenerateStarRating(Feedback.Rating))
                                </div>
                            </div>
                        </blockquote>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="testimonial-swiper-pagination d-flex justify-content-center mb-5"></div>
</section>
