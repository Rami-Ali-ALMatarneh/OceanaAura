<!-- Start Feedback Section -->
@if (VisibilityFeedback != null)
{
    <section id="Feedback" class="feedback-section py-5 bg-light ">
        <div class="container text-center pt-5 pb-5">
            <h3 class="section-title text-center mb-5">
                @if (SelectedLanguage == "ar")
                {
                    <span>
                        آرائكم تهمنا
                    </span>
                }
                else
                {
                    <span>WE LOVE GOOD COMPLIMENTS</span>
                }
            </h3>
            <div id="feedbackCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < VisibilityFeedback.Count; i++)
                    {
                        <button type="button" data-bs-target="#feedbackCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @foreach (var feedback in VisibilityFeedback.Select((value, index) => new { value, index }))
                    {
                        <div class="carousel-item w-100 mb-5 @(feedback.index == 0 ? "active" : "")">
                            <div class="card feedback-card mx-auto w-100">
                                <div class="card-body text-center p-4">
                                    <div class="quote-icon mb-3">
                                        <i class="fas fa-quote-left fa-2x text-primary"></i>
                                    </div>
                                    <p class="feedback-content mb-4">@feedback.value.Content</p>
                                    <div class="rating-stars mb-3">
                                        @for (int i = 0; i < feedback.value.Rating; i++)
                                        {
                                            <span class="star">★</span>
                                        }
                                        @for (int i = feedback.value.Rating; i < 5; i++)
                                        {
                                            <span class="star">☆</span>
                                        }
                                    </div>
                                    <small class="text-muted">Submitted by: @feedback.value.Email</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Custom Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon custom-carousel-control" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon custom-carousel-control" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
}

<!-- Add Custom CSS for Carousel Controls -->
<style>
