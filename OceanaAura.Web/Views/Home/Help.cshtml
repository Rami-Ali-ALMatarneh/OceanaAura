@{
    ViewData["Title"] = "Home Page";
    var categories = ViewBag.Categories as List<OceanaAura.Web.Models.Lookup.CategoryVM>;
    var Products = ViewBag.Products as List<OceanaAura.Web.Models.Products.ProductVMHome>;
    var CartSummaryList = ViewBag.CartSummaryList;
    var VisibilityFeedback = ViewBag.VisibilityFeedback as List<OceanaAura.Web.Models.Home.VisibilityFeedbackVM>;
    var sizes = (List<OceanaAura.Web.Models.Size.SizeVM>)ViewBag.Sizes;
    var SelectedRegionPage = ViewBag.SelectedRegionPage;
    var SelectedLanguage = ViewBag.SelectedLanguage; // Get the selected language

    var isArabic = SelectedLanguage == "ar";
}
<style>
    .icon-square {
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .rtl-text {
        text-align: right;
    }

    .product-card {
        transition: transform 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }
</style>
<div class="bg-dark text-white d-flex align-items-center justify-content-center" style="background: url('/File/HomeImg/imgHELP.jpeg') no-repeat center center; background-size: cover; height: 600px;">
    <div class="bg-dark bg-opacity-50 w-100 h-100 d-flex align-items-center justify-content-center">
        <div class="container text-center ">
            <h1 class="display-4 fw-bold">@(isArabic ? "مرحبًا بكم في أوشيانا أورا" : "Welcome to Oceana Aura")</h1>
            <p class="lead">@(isArabic ? "اكتشف أفضل المنتجات والعروض لدينا." : "Discover our best products and offers.")</p>
            <a asp-action="Store" asp-controller="home" class="btn btn-dark btn-lg">@(isArabic ? "تصفح المنتجات" : "Browse Products")</a>
        </div>
    </div>
</div>

<!-- Hanging Icons Section -->
<div class="container px-4 py-5" id="hanging-icons">
    <h2 class="pb-2 border-bottom text-center">@(isArabic ? "سياساتنا" : "Our Policies")</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-md-2 row-cols-lg-3">
        <!-- Refund and Exchange Policy -->
        <div class="col">
            <div class="card h-100 shadow-sm border-1">
                <div class="card-body text-center p-4">
                    <i class="fas fa-exchange-alt fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">@(isArabic ? "سياسة الاسترجاع والاستبدال" : "Refund and Exchange Policy")</h3>
                    <p class="card-text">
                        @(isArabic ? "نحن نهدف إلى إرضائك بشرائك. تحدد سياسة الاسترجاع والاستبدال هذه الظروف التي يمكنك بموجبها طلب استرداد أو استبدال." :
                            "We aim to make you satisfied with your purchase. This Refund and Exchange Policy outlines the circumstances under which you can request a refund or exchange.")
                    </p>
                    <p class="card-text fw-bold">
                        @(isArabic ? "الأهلية للاسترجاع:" : "Eligibility for Refund:")
                    </p>
                    <ul class="text-start">
                        <li>@(isArabic ? "يجب إرجاع المنتجات في غضون يومين من الشراء." : "Products must be returned within 2 days of purchase.")</li>
                        <li>@(isArabic ? "يجب أن تكون المنتجات غير مستخدمة وبحالتها الأصلية." : "Products must be unused and in original condition.")</li>
                    </ul>
                    <p class="card-text fw-bold">
                        @(isArabic ? "*كيفية طلب الاسترجاع*" : "*How to Request a Refund*")
                    </p>
                    <p class="card-text">
                        @if (isArabic)
                        {
                            <span>اتصل بفريق خدمة العملاء على <strong class="text-decoration-underline text-info">oaforce@outlook.com</strong> مع تفاصيل طلبك وسبب الاسترجاع. سيقوم فريقنا بتقييم طلبك.</span>
                        }
                        else
                        {
                            <span>Contact our customer service team at <strong class="text-decoration-underline text-info">oaforce@outlook.com</strong> with your order details and reason for refund. Our team will assess your request.</span>
                        }
                    </p>
                    <p class="card-text fw-bold">
                        @(isArabic ? "*عملية الاسترجاع*" : "*Refund Process*")
                    </p>
                    <p class="card-text">
                        @(isArabic ? "بمجرد الموافقة، سيتم إصدار المبلغ المسترد إلى طريقة الدفع الأصلية. عادةً ما يستغرق الاسترداد من 10 إلى 15 يوم عمل." :
                            "Once approved, refund will be issued to the original payment method. Refund typically takes 10-15 business days to process.")
                    </p>
                </div>
            </div>
        </div>

        <!-- Shipping Policy -->
        <div class="col">
            <div class="card h-100 shadow-sm border-1">
                <div class="card-body text-center p-4">
                    <i class="fas fa-shipping-fast fa-3x text-success mb-3"></i>
                    <h3 class="card-title">@(isArabic ? "سياسة الشحن" : "Shipping Policy")</h3>
                    <p class="card-text fw-bold">
                        @(isArabic ? "وقت التوصيل:" : "Delivery Time:")
                    </p>
                    <ul class="text-start">
                        <li>@(isArabic ? "يتم معالجة الطلبات في غضون 1-3 أيام عمل." : "Orders are processed within 1-3 business days.")</li>
                        <li>@(isArabic ? "تختلف أوقات التوصيل حسب موقعك، عادةً بين 2 و 7 أيام." : "Delivery times vary depending on your location, typically between 2 and 7 days.")</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Privacy Policy -->
        <div class="col">
            <div class="card h-100 shadow-sm border-1">
                <div class="card-body text-center p-4">
                    <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">@(isArabic ? "سياسة الخصوصية" : "Privacy Policy")</h3>
                    <p class="card-text">
                        @(isArabic ? "نحن نحرص على حماية خصوصيتك. تحدد سياسة الخصوصية كيفية جمع واستخدام معلوماتك الشخصية." :
                            "We are committed to protecting your privacy. Our Privacy Policy outlines how we collect and use your personal information.")
                    </p>
                    <p class="card-text">
                        @(isArabic ? "بياناتك آمنة معنا. لن نشارك معلوماتك مع أطراف ثالثة دون موافقتك." :
                            "Your data is safe with us. We will not share your information with third parties without your consent.")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Add Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<!-- Products Section -->
<div class="container py-5">
    <h2 class="text-center mb-4">@(isArabic ? "منتجاتنا المميزة" : "Featured Products")</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Products != null)
        {
            foreach (var product in Products.Take(3))
            {
                <div class="col">
                    <div class="card h-100 product-card">
                        <img src="~/File/ColorsImg/@product.ImgProduct[0]" class="card-img-top" alt="@product.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <a asp-action="buy" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-dark">@(isArabic ? "شراء الآن" : "Buy Now")</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>