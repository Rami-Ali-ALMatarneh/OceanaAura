@{
    Layout = "../Shared/_Layout.cshtml";
}
@model OceanaAura.Web.Models.Home.ContactUsVM

<!-- Navigation Header -->
<div class="container my-4">
    <div class="row">
        <div class="col d-flex justify-content-center align-items-center flex-column">
            <h1 class="display-6">Contact Us</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active"><a asp-action="ContactUs" asp-controller="Home">Contact Us</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Contact Section -->
<div class="container my-4 h-100">
    <div class="row shadow-lg">
        <!-- Contact Info Section -->
        <div class="col-md-5 bg-success text-white p-5">
            <h6 class="h4 mb-3">Let's get in touch</h6>
            <p class="mb-4">
                The best way to contact us is to use our contact form below. Please fill out all of the required fields and we will get back to you as soon as possible.
            </p>

            <!-- Phone Section -->
            <div class="d-flex mb-4">
                <div class="me-4">
                    <i class="fas fa-phone-alt" style="font-size: 32px;"></i>
                </div>
                <div>
                    <h5 class="mb-2">Phone</h5>
                    <p class="mb-0">
                        <a class="link-secondary text-decoration-none" href="tel:+1235235598">+1235 2355 98</a>
                    </p>
                </div>
            </div>

            <!-- Email Section -->
            <div class="d-flex mb-4">
                <div class="me-4">
                    <i class="fas fa-envelope" style="font-size: 32px;"></i>
                </div>
                <div>
                    <h5 class="mb-2">Email</h5>
                    <p class="mb-0">
                        <a class="link-secondary text-decoration-none" href="mailto:info@yoursite.com">info@yoursite.com</a>
                    </p>
                </div>
            </div>

            <!-- Website Section -->
            <div class="d-flex">
                <div class="me-4">
                    <i class="fas fa-globe" style="font-size: 32px;"></i>
                </div>
                <div>
                    <h5 class="mb-2">Website</h5>
                    <p class="mb-0">
                        <a class="link-secondary text-decoration-none" href="https://www.yoursite.com" target="_blank">yoursite.com</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-7 bg-white p-4">
            <h5>Get in touch</h5>
            <form asp-action="ContactUs" asp-controller="Home" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" id="Name" class="form-control" placeholder="Name" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Email" class="form-label">Email Address</label>
                        <input type="email" id="Email" class="form-control" placeholder="Email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Subject" class="form-label">Subject</label>
                    <input type="text" id="Subject" class="form-control" placeholder="Subject" asp-for="Subject" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Message" class="form-label">Message</label>
                    <textarea id="Message" class="form-control" rows="4" placeholder="Message" asp-for="Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success mt-4">Send Message</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Message Sent',
                text: '@TempData["SuccessMessage"]',
                confirmButtonText: 'OK'
            });
        </script>
    }
    @if (TempData["ErrorMessage"] != null){
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Message Sent',
                text: '@TempData["ErrorMessage"]',
                confirmButtonText: 'OK'
            });
        </script>
    }
}
